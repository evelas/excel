{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "no-console": "off",
    "require-jsdoc": "off",
    "operator-linebreak": "off",
    "max-len": "off",
    "no-debugger": "off",
    "space-before-function-paren": "off",
    "indent": "off",

    // Mandatory use of consistent spaces in braces
    "object-curly-spacing": [
      2,
      "always",
      {
        "objectsInObjects": false
      }
    ]
  },
  "extends": ["eslint:recommended", "google"]
}
